<div class="row">
  <div class="col mx-auto">
    <div class="row my-4">
      <div class="col pet-pictures">
        <% @pet.pictures.each do |picture| %>
          <%= link_to url_for(picture), target: '_blank' do %>
            <%= image_tag url_for(picture), class: 'pet-img-thumbnail' %>
          <% end %>
        <% end %>
      </div>
      <div class="col pet-details">
        <label class="bold"><%= t('activerecord.attributes.pet.name') %></label>
        <p class="pet-info">
          <%= @pet.safe_name %>
        </p>
        <label class="bold"><%= t('activerecord.attributes.pet.breed') %></label>
        <p class="pet-info">
          <%= @pet.safe_breed %>
        </p>
        <label class="bold"><%= t('activerecord.attributes.pet.gender') %></label>
        <p class="pet-info">
          <%= @pet.safe_gender %>
        </p>
        <label class="bold"><%= t('activerecord.attributes.pet.description') %></label>
        <p class="pet-info">
          <%= @pet.safe_description %>
        </p>
        <label class="bold"><%= t('activerecord.attributes.pet.city') %></label>
        <p class="pet-info">
          <%= @pet.city %>
        </p>
        <label class="bold"><%= t('activerecord.attributes.pet.state') %></label>
        <p class="pet-info">
          <%= @pet.state %>
        </p>
        <label class="bold"><%= t('activerecord.attributes.pet.country') %></label>
        <p class="pet-info">
          <%= @pet.country %>
        </p>
        <label class="bold"><%= t('.registered_at') %></label>
        <p class="pet-info">
          <%= l(@pet.created_at, format: :long) %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col pet-actions">
        <%= link_to t('.edit'),
                    edit_lost_pet_path(@pet),
                    class: 'btn btn-primary btn-pet-actions' %>
        <%= link_to t('.delete'),
                    lost_pet_path(@pet),
                    data: { confirm: t('.confirmation_message') },
                    method: :delete, class: 'btn btn-danger btn-pet-actions' %>
        <%= link_to t('.back'),
                    lost_pets_path,
                    class: 'btn btn-link btn-pet-actions' %>
      </div>
    </div>
  </div>
</div>
