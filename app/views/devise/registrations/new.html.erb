<div class="row">
  <div class="col-11 col-md-5 mx-auto">
    <h4 class="my-4 text-center">
      <%= t('.header') %>
    </h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/error_messages', object: resource %>
      <div class="form-group">
        <%= f.text_field :first_name,
                         autofocus: true,
                         autocomplete: 'on',
                         placeholder: t('activerecord.attributes.user.first_name'),
                         class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name,
                         autocomplete: 'on',
                         placeholder: t('activerecord.attributes.user.last_name'),
                         class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :phone_number,
                         autocomplete: 'on',
                         placeholder: t('.phone_number_placeholder'),
                         class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.email_field :email,
                          autocomplete: 'on',
                          placeholder: t('activerecord.attributes.user.email'),
                          class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password,
                             autocomplete: 'off',
                             placeholder: t('activerecord.attributes.user.password'),
                             class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation,
                             autocomplete: "off",
                             placeholder: t('activerecord.attributes.user.password_confirmation'),
                             class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit t('.sign_up'), class: 'btn btn-sm btn-primary btn-block' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
